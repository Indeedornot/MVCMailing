@{
}



<form method="post" asp-controller="Home" asp-action="Login">
    <div>
        <input type="text" name="Email" required/>
        <label>Email</label>
    </div>
    <div>
        <input type="text" name="Password" class="toggleable"/>
        <label>Password</label>
    </div>
    <div>
        <input type="text" name="ImapServer" class="toggleable"/>
        <label>IMapServer</label>
    </div>
    <div>
        <input type="checkbox" name="Google" class="toggle" value="false" onchange="this.value=this.checked"/>
        <label>Google</label>
    </div>
    <div>
        <input type="submit"/>
    </div>
</form>

@section scripts{
    <script src="~/js/toggleInputs.js"></script>
}