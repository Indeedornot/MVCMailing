@{
    ViewData["Title"] = "InBox";
}

@model List<EmailMessageVm>

<table>
    <tr class="text-center">
        <th>Sender</th>
        <th>Date</th>
        <th>Subject</th>
        <th>Body</th>
        <th>Delete</th>
    </tr>
    @for (int i = 0; i < @Model.Count; i++)
    {
        <tr class="text-wrap">
            <td>@Model[i].SenderEmail @Model[i].SenderName</td>
            <td>@Model[i].Date</td>
            <td>@Model[i].Subject</td>
            <td>@Model[i].Body</td>
            <td>
                <a asp-controller="Home" asp-action="Delete" asp-route-messageUID="@Model[i].MessageUid">Delete</a>
            </td>
        </tr>
    }
</table>